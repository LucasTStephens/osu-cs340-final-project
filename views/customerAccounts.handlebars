<!DOCTYPE html>
<html>
    <head>
        <title>CustomerAccounts</title>
        <link rel="stylesheet", href="./style.css">
        <script src="./index.js" charset="utf-8" defer></script>
    </head>
    <body>
        <h1>Customer Accounts</h1>
        <a href="./index">Go Back</a>
        
        <div></div>

        <button>New</button>
        <table>
            <tr>
                <th></th>
                <th></th>
                <th>email</th>
                <th>first name</th>
                <th>last name</th>
                <th>DOB</th>
            </tr>
            {{#each tableData}}
            <tr>
                <td><button>Edit</button></td>
                <td><button>Delete</button></td>
                <td>{{"Email"}}</td>
                <td>{{"First Name"}}</td>
                <td>{{"Last Name"}}</td>
                <td>{{"Date of Birth"}}</td>
            </tr>
            {{/each}}
        </table>

        <div>Add customer account</div>
        <form action="/customerAccounts/create" method="POST">
            <label for="email">email</label>
            <input name="email">

            <label for="first-name">first name</label>
            <input name="first-name">

            <label for="last-name">last name</label>
            <input name="last-name">

            <label for="date-of-birth">date of birth</label>
            <input name="date-of-birth">

            <button type="submit">Add</button>
            <button type="reset">Cancel</button>
        </form>
        

        <div>Update customer account</div>
        <form action="/customerAccounts/update" method="POST">
            <label for="email">email</label>
            <input name="email">

            <label for="first-name">first name</label>
            <input name="first-name">

            <label for="last-name">last name</label>
            <input name="last-name">

            <label for="date-of-birth">date of birth</label>
            <input name="date-of-birth">

            <button type="submit">Update</button>
            <button type="reset">Cancel</button>
        </form>

        <div>Delete customer account</div>
        <form action="/customerAccounts/delete" method="POST">
            <div>Warning: You are about to delete an account with the email: jonbovi@aol.com</div>
            <label for="email">Please enter the email to confirm: </label>
            <input name="email">
            <button type="submit">Delete</button>
            <button type="reset">Cancel</button>
        </form>
    </body>
</html>