<!DOCTYPE html>
<html>
    <head>
        <title>Employees</title>
        <link rel="stylesheet", href="./style.css">
        <script src="./index.js" charset="utf-8" defer></script>
    </head>
    <body>
        <h1>Employees</h1>
        <a href="./index">Go Back</a>

        <div></div>
        <button>New</button>
        <table>
            <tr>
                <th>employeeID</th>
                <th>statusIn</th>
                <th>position</th>
                <th>hourlyWage</th>
            </tr>
            {{#each tableData}}
            <tr>
                <td>{{"Employee #"}}</td>
                <td>{{"Clocked In"}}</td>
                <td>{{"Title"}}</td>
                <td>{{"Wage ($/hr)"}}</td>
            </tr>
            {{/each}}
        </table>

        <div>Add employee</div>
        <form action="/employees/create" method="POST">
            <label for="statusin">statusin</label>
            <input name="statusin">

            <label for="position">position</label>
            <input name="position">

            <label for="hourlywage">hourlywage</label>
            <input name="hourlywage">

            <button type="submit">Add</button>
            <button type="reset">Cancel</button>
        </form>
        

        <div>Update employee</div>
        <form action="/employees/update" method="POST">
            <label for="employeeID">employeeID</label>
            <select name="employeeID"></select>

            <label for="statusin">statusin</label>
            <input name="statusin">

            <label for="position">position</label>
            <input name="position">

            <label for="hourlywage">hourlywage</label>
            <input name="hourlywage">

            <button type="submit">Update</button>
            <button type="reset">Cancel</button>
        </form>

        <div>Delete employee</div>
        <form action="/employees/delete" method="POST">
            <div>Warning: You are about to delete an employee with the EmployeeID: 1</div>
            <button type="submit">Delete</button>
            <button type="reset">Cancel</button>
        </form>
    </body>
</html>