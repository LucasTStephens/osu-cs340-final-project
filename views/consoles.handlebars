<!DOCTYPE html>
<html>
    <head>
        <title>Employees</title>
        <link rel="stylesheet", href="./style.css">
        <script src="./index.js" charset="utf-8" defer></script>
    </head>
    <body>
        <h1>Consoles</h1>
        <div class="nav">
            <a href="./index">Home</a>
            <a href="./customerAccounts">Customer Accounts</a>
            <a href="./customerSales">Customer Sales</a>
            <a href="./employees">Employees</a>
            <a href="./gameSystems">Game Systems</a>
            <a href="./lounges">Lounges</a>
            <a href="./Lounges_Employees">Lounges_Employees</a>
            <a class="active" href="./consoles">Consoles</a>
        </div>

        {{!-- Read Table --}}
        <table>
            <tr>
                <th>Console System #</th>
                <th>Game Console Type</th>
            </tr>
            {{#each tableData}}
            <tr>
                <td>{{"Game System #"}}</td>
                <td>{{"Game Console Type"}}</td>
            </tr>
            {{/each}}
        </table>
        
        {{!-- Create --}}
        <div>Add console</div>
        <form action="/consoles/create" method="POST">
            <label for="consoleType">Game Console Type</label>
            <input name="consoleType">

            <button type="submit">Add</button>
            <button type="reset">Cancel</button>
        </form>
        
        {{!-- Update --}}
        <div>Update console</div>
        <form action="/consoles/update" method="POST">
            <label for="consoleID">Console System</label>
            <select name="consoleID" id="select-consoleID">
                <option value ="">Select ID #</option>
                {{#each tableData}}
                <option value="{{"Game System #"}}">{{"Game System #"}}</option>
                {{/each}}
            </select>

            <label for="consoleType">Game Console Type</label>
            <input name="consoleType">

            <button type="submit">Update</button>
            <button type="reset">Cancel</button>
        </form>

        {{!-- Delete --}}
        <div>Delete console</div>
        <form action="/consoles/delete" method="POST">
            <label for="consoleID">Please select the console system ID of the console you wish to delete:</label>
            <select name="consoleID" id="select-consoleID">
                <option value ="">Select ID #</option>
                {{#each tableData}}
                <option value="{{"Game System #"}}">{{"Game System #"}}</option>
                {{/each}}
            </select>
            <button type="submit">Delete</button>
            <button type="reset">Cancel</button>
        </form>
    </body>
</html>